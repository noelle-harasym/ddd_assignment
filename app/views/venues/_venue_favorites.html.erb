<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Favorites

    <a data-toggle="collapse" href="#venue_favorites_new_form">
      Add favorite
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @venue.favorites.each do |favorite| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to favorite, favorite %>

        <%= link_to favorite, method: :delete, data: { confirm: "Do you really want to delete this favorite" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="venue_favorites_new_form">
        <%= render partial: "venues/venue_favorites_new_form" %>
      </div>
    </div>

  </ul>
</div>
